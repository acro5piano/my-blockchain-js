{
  "name": "my-blockchain-js",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:acro5piano/my-blockchain-js",
  "author": "gosho-kazuya <ketsume0211@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "npm-run-all --parallel watch:ts watch:js",
    "watch:ts": "tsc -w",
    "watch:js": "env NODE_PATH=./dist nodemon --delay 2 --watch dist dist/index.js",
    "build": "env NODE_PATH=./src ./node_modules/.bin/tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint --fix -c tslint.json -p tsconfig.json"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.5.8",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.0.1"
  }
}
